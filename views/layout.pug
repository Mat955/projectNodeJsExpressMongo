doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=`item ${path == url ? 'item active' : ''}`)= title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Strona główna', '/')
        +item('Atualności', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')



    block content
